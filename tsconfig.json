{
  "compilerOptions": {
    /* 1. Rutas y Salida de Archivos */
    "rootDir": "src",
    "outDir": "dist",

    /* 2. Configuraci贸n del Lenguaje y Entorno */
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    /* 3. M贸dulos e Interoperabilidad */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* 4. Estrictez y Seguridad de Tipos (Strictness) */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,

    /* 5. Calidad y Estilo de C贸digo (Linter-like) */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* 6. Rendimiento de Compilaci贸n */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/websocket/events/startEventListener.ts"],
  "exclude": ["node_modules", "dist"]
}
